/**app.wxss**/
.container {
  height: 100vh;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0;
  margin: 0;
}

.background-image {
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1;
}

.create-room-btn {
  position: relative;
  z-index: 2;
  width: 250rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(90deg, 
    rgba(128, 128, 128, 0.5),  /* 灰色带透明度 */
    rgba(169, 169, 169, 0.5)   /* 浅灰色带透明度 */
  );
  color: white;
  border-radius: 40rpx;
  font-size: 32rpx;
  border: none;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.3);
  transition: transform 0.2s;
  font-weight: bold;
  letter-spacing: 2rpx;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
  padding: 0;
}

.create-room-btn:active {
  transform: scale(0.95);
  background: linear-gradient(90deg, 
    rgba(105, 105, 105, 0.5),  /* 深灰色带透明度 */
    rgba(128, 128, 128, 0.5)   /* 灰色带透明度 */
  );
}

/* 去除按钮的默认边框 */
.create-room-btn::after {
  border: none;
}

.icon {
  width: 40rpx;  /* 图标宽度 */
  height: 40rpx;  /* 图标高度 */
  vertical-align: middle;  /* 垂直居中对齐 */
  margin-right: 10rpx;  /* 图标与文字之间的间距 */
}